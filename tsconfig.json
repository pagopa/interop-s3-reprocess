{
  "compilerOptions": {
    "outDir": "dist",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "lib": ["es2021", "dom"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
